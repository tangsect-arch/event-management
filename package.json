{
  "name": "event-management",
  "version": "1.0.0",
  "description": "event management app",
  "main": "server.mjs",
  "scripts": {
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --detectOpenHandles --forceExit --runInBand",
    "test1": "jest --detectOpenHandles --forceExit",
    "start": "node server.mjs",
    "dev": "nodemon server.mjs",
    "app": "nodemon app.mjs"
  },
  "jestConfig": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.mjs",
      "**/?(*.)+(spec|test).mjs"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "json",
      "text",
      "lcov"
    ],
    "transform": {
      "^.+\\.m?js$": "babel-jest"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.mjs"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tangsect-arch/event-management.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "bugs": {
    "url": "https://github.com/tangsect-arch/event-management/issues"
  },
  "homepage": "https://github.com/tangsect-arch/event-management#readme",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.16.0",
    "mongoose-to-swagger": "^1.5.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^30.0.2",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.1"
  }
}
